@model DigiticketCMS.Models.ViewModel.ForgotPasswordViewModel

@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<!--begin::Head-->
<div class="kt-login__head">
    <span class="kt-login__signup-label">Bạn đã có tài khoản?</span>&nbsp;&nbsp;
    <a href="@Url.Action("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl })" class="kt-link kt-login__signup-link">Đăng nhập!</a>
</div>
<!--end::Head-->
<!--begin::Body-->
<div class="kt-login__body">
    <!--begin::Signin-->
    <div class="kt-login__form">
        <div class="kt-login__title">
            <h3>Xác nhận tài khoản</h3>
        </div>
        <div class="alert alert-info" role="alert">Vui lòng nhập email hoặc số điện thoại của bạn</div>
        <!--begin::Form-->
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @class = "kt-form", @id = "kt_forgot_password_form" }))
        {
            @Html.AntiForgeryToken()
            <div class="alert alert-warning dp-none" role="alert">
                <div class="alert-text"></div>
            </div>
            <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
            <div class="form-group">
                <input class="form-control" type="email" placeholder="Email" name="Username" required data-rule-validPhoneEmail="true" autocomplete="off">
            </div>
            <div class="kt-login__actions">
                <button id="kt_login_signin_submit" type="submit" class="btn btn-primary btn-elevate kt-login__btn-primary mx-auto">Xác nhận</button>
            </div>
        }
    </div>
    <!--end::Signin-->
</div>
<!--end::Body-->