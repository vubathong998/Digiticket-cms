@using (Html.BeginForm("CategoryTagUpdateHot", "CategoryTag", FormMethod.Post, new
{
    enctype = "multipart/form-data",
    @class = "kt-form ajax-form",
    @id = "CategoryTagIsHotAdd",
    spellcheck = false,
    showLoading = true
}))
{
    <input type="hidden" value="true" name="IsHot" />
    <div class="modal-header">
        <h1 class="modal-title">
            Thêm mới Is Hot trong chuyên mục blog
        </h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div>
            <label>Chọn Chuyên mục blog</label>
            <select class="select-categoryTag form-control cursor-pointer"></select>
            <input type="hidden" name="id" class="id" />
        </div>
        <div class="mt-3">
            <label>Idx</label>
            <input type="number" min="0" class="form-control" name="IdxHot" />
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="completeAdd btn btn-primary cursor-not-allowed opacity-50p">Hoàn tất</button>
    </div>
}
