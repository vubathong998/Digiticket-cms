@using Services.Models.Requests.Supplier;
@model SupplierUpdateBankRequest

@{
    var isReadOnly = Model.Id == null;
}

@using (Html.BeginForm("SupplierCreateOrUpdateBank", "Supplier", FormMethod.Post, new
{
    enctype = "multipart/form-data",
    @class = "validatiteUpdateBank kt-form ajax-form",
    showLoading = true,
    spellcheck = false
}))
{
    <div class="modal-header">
        <h1 class="modal-title">Update Bank</h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <input type="hidden" value="@Model.SupplierId" name="supplierId" readonly />
        @if (!isReadOnly)
        {
            <input type="hidden" value="@Model.Id" name="Id" readonly />
        }
        <div class="mb-2 position-relative">
            <div>
                <label for="accountName">Tên tài khoản</label><label class="text-red error ml-5" for="accountName"></label>
                <input class="form-control" placeholder="Nhập tên tài khoản" name="accountName" type="text" value="@Model.AccountName" />
            </div>
            <div class="mt-4">
                <label for="accountNo">Số tài khoản</label><label class="text-red error ml-5" for="accountNo"></label>
                <input class="form-control" placeholder="Nhập số tài khoản" name="accountNo" type="text" value="@Model.AccountNo" />
            </div>
            <div class="mt-4">
                <label for="bankName">Tên ngân hàng</label><label class="text-red error ml-5" for="bankName"></label>
                <input class="form-control" placeholder="Nhập ngân hàng" name="bankName" type="text" value="@Model.BankName" />
            </div>
            <div class="mt-4">
                <label for="branchName">Chi nhánh</label><label class="text-red error ml-5" for="branchName"></label>
                <input class="form-control" placeholder="Nhập chi nhánh" name="branchName" type="text" value="@Model.BranchName" />
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn @(isReadOnly ? "btn-primary" : "btn-success")">Hoàn tất</button>
        @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>*@
    </div>
}