@using Services.Models.Requests.Supplier;
@model SupplierUpdateTenantRequest

@using (Html.BeginForm("SupplierUpdateTenant", "Supplier", FormMethod.Post, new
{
    enctype = "multipart/form-data",
    @class = "kt-form",
    @id = "FormSupplierUpdateTenant"
}))
{
    <input type="hidden" name="Id" value="@Model.Id" readonly />
    <div class="modal-header">
        <h1 class="modal-title">
            <span>Chọn Tenant</span>
        </h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <b class="text-warning">Bạn phải chọn tenant trước khi sử dụng sản phẩm từ digipost</b>
        @if (Model.Id != null)
        {
            <input type="hidden" readonly value="@Model.Id" />
        }
        <div class="alert alert-warning dp-none" role="alert">
            <div class="alert-text"></div>
        </div>
        <div class="mb-2 tags-element mt-3">
            <label>Lựa chọn tenant</label>
            @*<input class="SupplierInputGetByKey-suggest form-control" type="text" name="inputTenant" placeholder="Nhập tên tenant" />
                <div class="form-suggest-result">
                    <div class="spinner-border kt-spinner--success d-none mt-2"></div>
                </div>*@
            <label class="text-red error ml-5" for=""></label>
            <select class="form-control select-suplierTenant" name="inputTenant" id="inputTenant"></select>
            <input type="text" class="d-none" id="nameSupplier" value="@Model.Name.ToLower()" />
            <input type="text" class="d-none" id="nameTenant" name="nameTenant" />
            <input type="text" class="d-none tenantId" name="tenantId" id="tenantId" />
            <input type="text" class="d-none tenantCode" name="tenantCode" id="tenantCode" />
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Hoàn tất</button>
    </div>
}