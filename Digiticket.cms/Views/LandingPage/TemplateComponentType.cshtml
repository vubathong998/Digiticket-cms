@using Infrastructure.Config;

@{
    ViewBag.Title = "TemplateComponentType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" id="kt_content">
    <!-- begin:: Content -->

    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__head kt-portlet__head--lg">
                <div class="kt-portlet__head-label">
                    <span class="kt-portlet__head-icon">
                        <i class="kt-font-brand flaticon2-line-chart"></i>
                    </span>
                    <h3 class="kt-portlet__head-title">
                        Danh sách template component type
                    </h3>
                </div>
                <div class="kt-portlet__head-toolbar">
                    <div class="kt-portlet__head-wrapper">
                        <div class="kt-portlet__head-actions">
                            <div class=" text-right">
                                <a href="@Url.Action("TemplateComponentTypeAddOrEditModal", "LandingPage")" class="btn btn-primary btn-elevate btn-icon-sm"
                                   data-modal="" data-modal-size="modal-lg" data-callback="">
                                    <i class="la la-plus"></i>
                                    Thêm mới
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__body">
                <div class="">
                    @FilterHelper.FindName("col-sm-12 col-lg-3 pl-0")
                </div>
                <div id="mainTable" class="mt-3">
                </div>
            </div>
        </div>
    </div>
    <!-- end:: Content -->
</div>

@Html.Partial("~/Views/Modals/_DefaultModal.cshtml")

@section customScripts {
    <script src="~/Content/js/app-code/filterHelper.js?v=@SystemVersion.VersionJS"></script>
    <script src="~/Content/js/common-pages/landingPage/templateComponentType.js?v=@SystemVersion.VersionJS"></script>

    <script>
        $(document).ready(function () {
            templateComponentType.init();
        })
    </script>
}
