@using Services.Models.Responses.Lib;
@model LibCategoryResponse

@using (Html.BeginForm("LibCategoryUpdate", "Lib", FormMethod.Post, new
{
    enctype = "multipart/form-data",
    @class = "kt-form ajax-form",
    @id = "FormLibCategoryUpdate",
    spellcheck = false
}))
{
    <div class="modal-header">
        <input type="hidden" value="@Model.Id" name="id"/>
        <h1 class="modal-title">
            Update danh mục <span class="text-success">@Model.Name</span>
        </h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body contentUpdaTenant">
        <div class="">
            <label>Tên</label><label class="text-red error ml-5" for="name"></label>
            <input id="name" name="name" class="form-control" value="@Model.Name" />
        </div>
        <div class="mt-3">
            <label>Icon</label><label class="text-red error ml-5" for="name"></label>
            <input id="iconPath" name="iconPath" class="form-control" value="@Model.IconPath" />
        </div>
        <div class="mt-3">
            <label>Mô tả</label><label class="text-red error ml-5" for="description"></label>
            <input id="description" name="description" class="form-control" value="@Model.Description" />
        </div>
        <div class="mt-3">
            <label>Url</label><label class="text-red error ml-5" for="url"></label>
            <input id="url" name="url" class="form-control" value="@Model.Url" />
        </div>
        <div class="mt-3 row">
            <div class="col-12 col-lg-4">
                <label>Vị trí</label><label class="text-red error ml-5" for="position"></label>
                <input id="position" justNumber name="position" class="form-control" value="@Model.Position" />
            </div>
            <div class="col-12 col-lg-4">
                <label>Available</label><label class="text-red error ml-5" for="isAvailable"></label>
                <select id="isAvailable" name="isAvailable" class="form-control cursor-pointer">
                    <option value="false" @(Model.IsAvailable ? "" : "selected")>Không có sẵn</option>
                    <option value="true" @(Model.IsAvailable ? "selected" : "")>Có sẵn</option>
                </select>
            </div>
            <div class="col-12 col-lg-4">
                <label>View</label><label class="text-red error ml-5" for="isView"></label>
                <select id="isView" name="isView" class="form-control cursor-pointer">
                    <option value="false" @(Model.IsView ? "" : "selected")>Không</option>
                    <option value="true" @(Model.IsView? "selected" : "")>Có</option>
                </select>
            </div>
        </div>
    </div>
    <div class="mt-3 modal-footer">
        <button type="submit" class="btn btn-primary">Hoàn tất</button>
    </div>
}